<% include partials/header.ejs %>

<main class="container">
    <main class="container">
        <div class="container-full" style="background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8)),url('http://desktopbackgroundshq.com/backgrounds/computer-hd-wallpaper-computer-background-computer-background-25783.jpg'); background-repeat:no-repeatdisplay: compact; ">
            <div class="row">
                <div class="container fadeInDown animated">
                    <div class="col-lg-12 text-center v-center  ">
                        <p class="lead">Login for your favourite dress </p>
    <h1>Login</h1>

    <% if (messages.length > 0) { %>
    <div class="alert alert-danger"><%= messages %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">Username: *</label>
            <input name="username" id="username" required />
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">Password: *</label>
            <input name="password" id="password" type="password" required />
        </div>

        <button class="btn btn-success col-sm-offset-2">Login</button>
        <a href="/facebook">
            <img src= "/images/facebook.png" alt="Login with facebook" />
        </a>
        <br>
        <a href="/github">
            <img src= "/images/github.png" alt="Login with github" />
        </a>
        <hr />
        Need access?  <a href="/register" title="Register">Register</a>
    </form>

</main>

<% include partials/footer.ejs %>